<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comp_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이수명 대리님을 칭찬합니다! 오늘 제가 출근하다가 다쳐서 조금 지각을 했는데.. 걱정해주셔서 너무 감사했습니다."
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_extrabold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/comp_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이수명 대리님을 칭찬합니다! 오늘 제가 출근하다가 다쳐서 조금 지각을 했는데.. 걱정해주셔서 너무 감사했습니다."
                android:textSize="15dp"
                android:textColor="@color/gray6"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            android:layout_gravity="center_vertical">

            <ImageButton
                android:id="@+id/comp_image"
                android:layout_width="88dp"
                android:layout_height="71dp"
                android:src="@drawable/test_image_1"
                android:scaleType="centerCrop"
                android:padding="0dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:contentDescription="테스트 유저 이미지"
                android:visibility="gone"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지히"
                android:textSize="13dp"
                android:textColor="@color/gray4"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="2dp"/>

            <TextView
                android:id="@+id/user_write_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023.09.02"
                android:textSize="13dp"
                android:textColor="@color/gray4"
                android:drawableStart="@drawable/ic_rectangle"
                android:drawablePadding="5dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_comp_heart"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="22"
                android:textSize="12dp"
                android:textColor="@color/sel_comp_heart"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@color/transparent"
                android:drawableStart="@drawable/sel_comp_heart"
                android:drawablePadding="2dp"/>

            <Button
                android:id="@+id/btn_comp_cmt"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="22"
                android:textSize="12dp"
                android:textColor="@color/gray3"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@color/transparent"
                android:drawableStart="@drawable/ic_comment_20dp"
                android:drawablePadding="2dp"
                android:layout_marginStart="16dp"
                android:clickable="false"
                android:focusable="false"/>

            <Button
                android:id="@+id/btn_comp_view"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="22"
                android:textSize="12dp"
                android:textColor="@color/gray3"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@color/transparent"
                android:drawableStart="@drawable/ic_eye_20dp"
                android:drawablePadding="2dp"
                android:layout_marginStart="16dp"
                android:clickable="false"
                android:focusable="false"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>