<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_constraint_layout">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginVertical="6dp"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:background="@color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="칭찬 글"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16dp"
            android:textColor="@color/gray6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_back"/>

        <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginVertical="6dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/btn_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sel_comp_bmk"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_more"
            android:layout_marginVertical="6dp"
            android:padding="8dp"
            android:background="@color/transparent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_constraint_layout"
        android:layout_marginBottom="64dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="120dp"
                        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/gray2"
                        android:layout_marginTop="4dp">

                        <ImageButton
                            android:id="@+id/user_image"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_user_blank"
                            android:scaleType="centerCrop"
                            android:padding="0dp"/>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="120dp"
                        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/white"
                        android:layout_gravity="bottom|end">

                        <ImageButton
                            android:id="@+id/user_badge_image"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_badge_gold"
                            android:scaleType="centerCrop"
                            android:padding="0dp"/>

                    </com.google.android.material.card.MaterialCardView>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="홍길동"
                            android:fontFamily="@font/pretendard_extrabold"
                            android:textSize="15dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="BEST"
                            android:fontFamily="@font/pretendard_extrabold"
                            android:textSize="14dp"
                            android:textColor="@color/brand"
                            android:layout_marginStart="4dp"
                            android:layout_gravity="top"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_write_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1시간 전"
                        android:textSize="12dp"
                        android:textColor="@color/gray4"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/rv_comp_write_btn_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="재능/능력"
                    android:textSize="13dp"
                    android:textColor="@color/brand"
                    android:background="@drawable/round_gray1_13dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/comp_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내 친구 OOO 는 정말 멋진 사람이에요. "
                    android:fontFamily="@font/pretendard_extrabold"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/comp_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="착하기도 한데 친절하기도 한 것 같아.
그런데 웃는 모습까지도 예쁘니 친구들 한테 인기가 많아서 너무 부러워...
그런데 웃는 모습까지도 예쁘니 친구들 한테 인기가 많아서 너무 부러워...
그런데 웃는 모습까지도 예쁘니 친구들 한테 인기가 많아서 너무 부러워...
그런데 웃는 모습까지도 예쁘니 친구들 한테 인기가 많아서 너무 부러워...
그런데 웃는 모습까지도 예쁘니 친구들 한테 인기가 많아서 너무 부러워..."
                    android:textSize="15dp"
                    android:textColor="@color/gray6"
                    android:layout_marginTop="8dp"
                    android:maxLines="5"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/rv_comp_image"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical">

                        <ImageButton
                            android:id="@+id/btn_heart"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/sel_comp_heart"
                            android:layout_gravity="center_vertical"
                            android:background="@color/transparent"/>

                        <TextView
                            android:id="@+id/heart_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22"
                            android:textSize="12dp"
                            android:textColor="@color/gray3"
                            android:layout_gravity="center"
                            android:layout_marginStart="2dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp">

                        <ImageButton
                            android:id="@+id/btn_comment"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_comment_20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/transparent"/>

                        <TextView
                            android:id="@+id/comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="12dp"
                            android:textColor="@color/gray3"
                            android:layout_gravity="center"
                            android:layout_marginStart="2dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp">

                        <ImageButton
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_eye_20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/transparent"/>

                        <TextView
                            android:id="@+id/comp_view_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22"
                            android:textSize="12dp"
                            android:textColor="@color/gray3"
                            android:layout_gravity="center"
                            android:layout_marginStart="2dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:id="@+id/btn_share"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_share"
                        android:layout_gravity="center_vertical"
                        android:background="@color/transparent"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray1"
                    android:paddingVertical="8dp">

                    <Button
                        android:id="@+id/btn_cmt_sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최신순"
                        android:textSize="12dp"
                        android:textColor="@color/gray4"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:minHeight="0dp"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/rv_comp_comment"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_top_gray1_24dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:minHeight="64dp">

        <EditText
            android:id="@+id/edit_cmt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="댓글을 입력해 주세요"
            android:textSize="15dp"
            android:textColor="@color/gray6"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:maxLines="3"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="등록"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:background="@drawable/round_brand_18dp" />

    </LinearLayout>

</RelativeLayout>