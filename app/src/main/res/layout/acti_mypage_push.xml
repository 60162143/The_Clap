<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginVertical="6dp"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:background="@color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16dp"
            android:textColor="@color/gray6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_back"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="앱푸시"
                android:textSize="15dp"
                android:textColor="@color/gray6"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_push"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                app:track="@drawable/sel_switch"
                android:thumb="@drawable/switch_thumb"
                app:thumbTextPadding="24dp"
                app:switchMinWidth="60dp"
                app:switchPadding="5dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="서비스 이용에 필요한 안내 사항을 앱푸시로 알림 받기"
            android:textSize="13dp"
            android:textColor="@color/gray4"
            android:layout_marginHorizontal="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/gray1"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="챌린지"
                android:textSize="15dp"
                android:textColor="@color/gray6"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_challenge"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                app:track="@drawable/sel_switch"
                android:thumb="@drawable/switch_thumb"
                app:thumbTextPadding="24dp"
                app:switchMinWidth="60dp"
                app:switchPadding="5dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="참여한 챌린지 시작 및 종료 챌린지 인증 시간 안내 등"
            android:textSize="13dp"
            android:textColor="@color/gray4"
            android:layout_marginHorizontal="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="댓글 및 친구"
                android:textSize="15dp"
                android:textColor="@color/gray6"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_friend"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                app:track="@drawable/sel_switch"
                android:thumb="@drawable/switch_thumb"
                app:thumbTextPadding="24dp"
                app:switchMinWidth="60dp"
                app:switchPadding="5dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="게시글 댓글 및 초대한 친구가 가입했을 때"
            android:textSize="13dp"
            android:textColor="@color/gray4"
            android:layout_marginHorizontal="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="혜택"
                android:textSize="15dp"
                android:textColor="@color/gray6"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_benefit"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                app:track="@drawable/sel_switch"
                android:thumb="@drawable/switch_thumb"
                app:thumbTextPadding="24dp"
                app:switchMinWidth="60dp"
                app:switchPadding="5dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="신규 챌린지, 이멘트 등 다양한 혜택, 소식 안내"
            android:textSize="13dp"
            android:textColor="@color/gray4"
            android:layout_marginHorizontal="16dp"/>

    </LinearLayout>

</LinearLayout>