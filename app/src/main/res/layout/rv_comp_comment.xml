<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom_gray1_1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp">

            <FrameLayout
                android:layout_width="27dp"
                android:layout_height="27dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="120dp"
                    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/gray2"
                    android:layout_marginTop="4dp">

                    <ImageButton
                        android:id="@+id/user_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_user_blank"
                        android:scaleType="centerCrop"
                        android:padding="0dp"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="120dp"
                    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/white"
                    android:layout_gravity="bottom|end">

<!--                    <ImageButton-->
<!--                        android:id="@+id/user_badge_image"-->
<!--                        android:layout_width="12dp"-->
<!--                        android:layout_height="12dp"-->
<!--                        android:src="@drawable/ic_badge_gold"-->
<!--                        android:scaleType="centerCrop"-->
<!--                        android:padding="0dp"/>-->

                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동"
                    android:textSize="13dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/user_write_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1시간 전"
                    android:textSize="12dp"
                    android:textColor="@color/gray4"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brand"
                android:background="@drawable/ic_more"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수고했습니다. 수고했습니다. 수고했습니다. 수고했습니다. 수고했습니다. 수고했습니다. 수고했습니다. "
                android:textSize="13dp"
                android:textColor="@color/gray6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textSize="12dp"
                    android:textColor="@color/sel_comp_heart"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:background="@color/transparent"
                    android:drawableStart="@drawable/sel_comp_heart"
                    android:drawablePadding="2dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>