<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:state_enabled="true">
        <shape>
            <solid
                android:color="@color/white"/>
            <corners
                android:topRightRadius="16dp"
                android:topLeftRadius="16dp"
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"/>
            <stroke
                android:color="@color/brand"
                android:width="1dp"/>
        </shape>
    </item>
    <item android:state_selected="false" android:state_enabled="true">
        <shape>
            <solid android:color="@color/brand"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/gray1"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>